function countArgs() {
	return arguments.length;
	//or
	return arguments;
});

coutArgs();
//0

coutArgs(1,2,3,4,5)
//5

countArgs(1,2,3, "d, "f")


arguments similar to array  has length

function sum() {
	var i, total = 0;
	for(i = 0; i< arguments.length; i++) {
	total += arguments[i];
	}
	return total;
}




